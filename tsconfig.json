{
  "compilerOptions": {
    "target": "es5", // Target ECMAScript 5 for compatibility
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM and ESNext libraries
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "noEmit": true, // Do not emit compiled files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "module": "esnext", // Use ESNext module system
    "moduleResolution": "node", // Resolve modules using Node.js resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled independently
    "jsx": "preserve", // Preserve JSX syntax for Next.js
    "incremental": true, // Enable incremental compilation for faster builds
    "paths": {
      "@/*": ["./*"] // Configure the @ alias to point to the root directory
    },
    "plugins": [
      {
        "name": "next" // Enable Next.js-specific TypeScript features
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Include Next.js environment types
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript React files
    ".next/types/**/*.ts" // Include Next.js types
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}